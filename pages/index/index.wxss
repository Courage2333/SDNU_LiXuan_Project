page {
  background-color: #dbc545;
}
.swiper-container {
  background-color: #dbc545;
  width: 100%;
  height: 40%;
  position: fixed;
}

.swiper {
  width: 100%;
  height: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.swiper-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10rpx;
  /* 边缘渐变为无色 */
  mask-image: linear-gradient(to bottom,  #97d86b, black, black, black,#97d86b);
  -webkit-mask-image: linear-gradient(to bottom,  #97d86b, black, black, black, #97d86b);
}

.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #ddcccc;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.2);
  height: 90rpx;
}
.center-text {
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.center-text .text {
  font-size: 120rpx;
  color: #333;
  font-family: "STXingkai", "行楷", cursive;
  font-weight: 800;
}
.center-text .textt {
  font-size: 110rpx;
  color: #333;
  font-family: SimHei;
  font-weight: 800;
}
.center-text .texttt {
  font-size: 110rpx;
  color: rgb(97, 75, 4);
  font-family: "STXingkai", "行楷", cursive;
  animation: floatText 2s ease-in-out infinite alternate;
}

.center-text .textttt {
  font-size: 110rpx;
  color: rgb(97, 75, 4);
  font-family: "STXingkai", "行楷", cursive;
  animation: floatText 3s ease-in-out infinite alternate;
}

.tab-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666666;
}

.tab-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

@keyframes floatText {
  from {
    transform: translateY(10);
  }
  to {
    transform: translateY(-10px);
  }
}
.page-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

.recommendation-wrapper {
  position: fixed;
  z-index: 999;
  bottom: 80rpx;
  left: 0;
  width: 100%;
  height: 60%;
  background-color: #c1ec7c;
  overflow: hidden;
  margin-bottom:10rpx
}

.recommendation {
  width: 100%;
  height: 100%;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.recommendation-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  padding: 20rpx;
}

.recommendation-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.recommendation-image {
  width: 100%;
  height: 140rpx;
  object-fit: cover;
}

.recommendation-name {
  display: block;
  padding: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.recommendation-title {
  display: block;
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.navigation-bar {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
}
