/* pages/loading/loding.wxss */
.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #f7f7f7;
}

.loader {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
}

.circle {
  display: inline-block;
  margin: 2px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background-color: #1aad19;
  animation: loading 1.4s infinite ease-in-out both;
}

@keyframes loading {
  0% {
    transform: scale(0);
  }
  20% {
    transform: scale(1);
  }
  40% {
    transform: scale(0);
  }
}

.loading-text {
  margin-top: 16px;
  font-size: 14px;
  color: #333;
}
